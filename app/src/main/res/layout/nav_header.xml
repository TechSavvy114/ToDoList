<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@drawable/notebook">

    <TextView
        android:id="@+id/name"
       android:layout_marginTop="38dp"
        android:layout_marginLeft="15dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#F7F7FA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Things To Note"/>


    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAFAFB"
        android:text="Take Your Notebook With You"
        android:layout_below="@id/name"
        android:layout_marginLeft="15dp"
        />

    <TextView

        android:id="@+id/displayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textSize="16sp"
        android:hint="Saurabh Singh"
        android:textColorHint="#F9F8FA"
        android:layout_marginTop="170dp"
        android:textColor="#F6F6F8" />

    <TextView
        android:id="@+id/displayemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FCFCFD"
        android:text="techsavvy114@gmail.com"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>



</RelativeLayout>